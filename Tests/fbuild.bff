{
  .ProjectName = 'Tests'
  .ProjectBasePath = '$RepoRoot$/Tests'

  VCXProject( 'Tests-Proj' )
  {
    .Output = '$RepoRoot$/Build/$ProjectName$.exe'
    .OutputDirectory = '$RepoRoot$/Build'

    .ProjectOutput = 'Workspace/VisualStudio/$ProjectName$.vcxproj'
    .ProjectInputPaths = { '$ProjectBasePath$' }
    .LocalDebuggerCommand = '$Output$'
    .LocalDebuggerWorkingDirectory = '$RepoRoot$/Build'
    //.IncludeSearchPath + '??'
  }

  .SourcePath = 'Tests'

  ObjectList( 'Tests-Lib' )
  {
    .CompilerInputPath = '$SourcePath$'
    .CompilerOutputPath = '$BuildPath$/Tests'
  }

  Executable( 'Tests' )
  {
    .Libraries + 'Tests-Lib'
    .LinkerOptions + ' /PDB:$BuildPath$/Tests.pdb'
    .LinkerOutput = '$BuildPath$/Tests.exe'
  }

  Alias( 'Tests-x64-Debug' )   { .Targets = 'Tests' }
  Alias( 'Tests-x64-Release' ) { .Targets = 'Tests' }
}
